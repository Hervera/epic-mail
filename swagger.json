{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "EPIC MAIL - Web Application",
        "description": "EPIC mail is a web app that facilitates people to exchange messages over the internet. The app has authentication and functionalites where each user has to register and then login. In order have access for messaging pages. A user can be able to make CRUD operations for messaging."
    },
    "host": "hervera-epicmail.herokuapp.com",
    "basePath": "/api/v1",
    "tags": [
        {
            "name": "User",
            "description": "API for user Authentication"
        },
        {
            "name": "Message",
            "description": "API for email messages"
        }
    ],
    "schemes": [
        "http",
        "https"
    ],
    "securityDefinitions": {
        "Bearer": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    },
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/auth/signup": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Create a user account",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "description": "Create a user account",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {}
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Login a user",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "description": "Login a user",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/messages": {
            "post": {
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "tags": [
                    "Message"
                ],
                "summary": "Create or send an email",
                "parameters": [
                    {
                        "name": "message",
                        "in": "body",
                        "description": "message that we want to create",
                        "schema": {}
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "New message is created",
                        "schema": {}
                    }
                }
            },
            "get": {
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "tags": [
                    "Message"
                ],
                "summary": "Fetch all received emails",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {}
                    }
                }
            }
        },
        "/messages/unread": {
            "get": {
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "tags": [
                    "Message"
                ],
                "summary": "Fetch all unread received emails",
                "responses": {
                    "200": {
                        "description": "unread messages",
                        "schema": {}
                    }
                }
            }
        },
        "/messages/read": {
            "get": {
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "summary": "Fetch all read received emails",
                "tags": [
                    "Message"
                ],
                "responses": {
                    "200": {
                        "description": "read messages",
                        "schema": {}
                    }
                }
            }
        },
        "/messages/sent": {
            "get": {
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "summary": "Fetch all sent emails",
                "tags": [
                    "Message"
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "schema": {}
                    }
                }
            }
        },
        "/messages/draft": {
            "get": {
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "summary": "Fetch all draft emails",
                "tags": [
                    "Message"
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "schema": {}
                    }
                }
            }
        },
        "/messages/{messageId}": {
            "parameters": [
                {
                    "name": "messageId",
                    "in": "path",
                    "required": true,
                    "description": "ID of message that we want to find",
                    "type": "string"
                }
            ],
            "get": {
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "tags": [
                    "Message"
                ],
                "summary": "Fetch a specific email record",
                "responses": {
                    "200": {
                        "description": "Message is found",
                        "schema": {}
                    }
                }
            },
            "delete": {
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "summary": "Delete a specific email record",
                "tags": [
                    "Message"
                ],
                "responses": {
                    "200": {
                        "description": "Message is deleted",
                        "schema": {}
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "required": [
                "firstName",
                "lastName",
                "email",
                "password"
            ],
            "properties": {
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "uniqueItems": true
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "Message": {
            "required": [
                "subject",
                "message",
                "status",
                "senderId",
                "receiverId"
            ],
            "properties": {
                "subject": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                },
                "senderId": {
                    "type": "integer"
                },
                "receiverId": {
                    "type": "integer"
                }
            }
        }
    }
}